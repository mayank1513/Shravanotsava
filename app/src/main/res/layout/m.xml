        <TextView
            android:id="@+id/prabhupada_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onClick"
            android:text="@string/prabhupada_vani"
            android:textSize="18sp"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chant_with_prabhupada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="10dp"
                android:onClick="onClick"
                android:singleLine="true"
                android:text="@string/chant_with_prabhupada"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ripple"
                android:onClick="onClick"
                android:src="@drawable/stop"
                android:tint="#FA8713" />
        </FrameLayout>

        <TextView
            android:id="@+id/prabhupada_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onClick"
            android:text="@string/srila_prabhupada_today"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>