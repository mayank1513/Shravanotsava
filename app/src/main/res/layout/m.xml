<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="3dp"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kbtn"
        android:backgroundTint="#a000"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/shuffle_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClick"
                android:src="@drawable/shuffle"
                android:tint="#FA8713" />

            <ImageButton
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClick"
                android:src="@drawable/send"
                android:tint="#FA8713" />

            <ImageButton
                android:id="@+id/sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClick"
                android:src="@drawable/sort"
                android:tint="#FA8713" />

            <ImageButton
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClick"
                android:src="@drawable/filter"
                android:tint="#FA8713" />

            <ImageButton
                android:id="@+id/preferences_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClick"
                android:src="@drawable/setting"
                android:tint="#FA8713" />
        </LinearLayout>

        <TextView
            android:id="@+id/pl_chant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:onClick="onClick"
            android:text="@string/please_chant"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mahamantra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:text="@string/mahamantra"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

