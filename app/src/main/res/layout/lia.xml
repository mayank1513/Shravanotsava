<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/rect1"
    android:descendantFocusability="blocksDescendants"
    tools:ignore="ContentDescription">
    <ImageView android:id="@+id/arte"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="2dp"
        android:background="@drawable/ripple_nomask"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sp1" />

    <TextView android:id="@+id/lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="-0.5"
        android:shadowDy="-0.5"
        android:shadowRadius="8"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        android:fontFamily="cursive"
        android:typeface="serif"
        tools:ignore="SmallSp" />

    <TextView android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />
    <TextView android:id="@+id/ref"
        android:background="@drawable/rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:padding="2dp"
        android:layout_marginStart="64dp"
        android:layout_below="@+id/title"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic|bold"
        android:typeface="serif" />
    <TextView android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:justificationMode="inter_word"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textSize="12sp" />
    <ImageButton android:id="@+id/download_"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/arte"
        android:layout_marginStart="37dp"
        android:alpha=".7"
        android:background="@drawable/ripple"
        android:src="@drawable/download"
        android:tint="@color/colorAccent" />

    <LinearLayout android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ripple"
            android:padding="3dp"
            android:src="@drawable/thumb_pink" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ripple"
            android:padding="5dp"
            android:src="@drawable/reply" />

        <ImageButton
            android:id="@+id/list_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:background="@drawable/ripple"
            android:src="@drawable/more"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="2dp"
            android:tint="@color/colorAccent" />
    </LinearLayout>
    <LinearLayout android:id="@+id/anim"
        android:orientation="horizontal"
        android:layout_height="10dp"
        android:paddingEnd="10px"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:gravity="bottom"
        android:layout_width="wrap_content">
        <View
            android:layout_width="3dp"
            android:layout_margin="1dp"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="3dp"
            android:layout_margin="1dp"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="3dp"
            android:layout_margin="1dp"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView android:id="@+id/type"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:rotation="10"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_blue_bright"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/diagnose"
        android:visibility="gone"
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>