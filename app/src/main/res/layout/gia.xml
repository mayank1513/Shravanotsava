<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="200dp"
    android:background="@drawable/rect1"
    android:descendantFocusability="blocksDescendants"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/arte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ripple_nomask"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sp1" />

    <TextView
        android:id="@+id/lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:fontFamily="cursive"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="-0.5"
        android:shadowDy="-0.5"
        android:shadowRadius="8"
        android:text="Eng"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="34dp"
        android:background="@drawable/rect"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:fontFamily="serif"
        android:padding="2dp"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic|bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="115dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="serif"
        android:gravity="end"
        android:justificationMode="inter_word"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/list_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/ripple"
        android:padding="2dp"
        android:scaleType="center"
        android:src="@drawable/more"
        android:tint="@color/colorAccent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/download_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".7"
            android:background="@drawable/ripple"
            android:scaleType="fitCenter"
            android:src="@drawable/download"
            android:tint="@color/colorAccent" />

        <ImageButton
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ripple"
            android:padding="3dp"
            android:src="@drawable/thumb_pink" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ripple"
            android:padding="5dp"
            android:scaleX="-1"
            android:src="@drawable/reply"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:fontFamily="serif"
        android:rotation="10"
        android:shadowColor="@android:color/holo_blue_bright"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/diagnose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:visibility="gone" />
</FrameLayout>